@model GoldLoanFinance.Web.Models.LoanViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>View Loan Details</h4>

<hr />

<form asp-action="UpdateLoan" asp-controller="Loan">
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="LoanMaster.LoanId" />
            <div class="form-group">
                <label asp-for="LoanMaster.LoanAmount" class="control-label"></label>
                <input asp-for="LoanMaster.LoanAmount" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="LoanMaster.DateTaken" class="control-label" ></label>
                <input asp-for="LoanMaster.DateTaken" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="LoanMaster.DueDate" class="control-label"></label>
                <input asp-for="LoanMaster.DueDate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="LoanMaster.Customer.Name" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" disabled />
            </div>
            <br />
            <div class="form-group">

                <a asp-action="ListLoans" asp-controller="Loan" class="btn btn-primary">Back</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-sm-12">
                    <div id="formMessage" class="text-danger"></div>
                    <table class="table" id="itemsTable">
                        <thead>
                            <tr>
                                <th>Article Name</th>
                                <th>Unit</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="itemsTableBody">
                            @if (Model.LoanMaster?.LoanDetails != null)
                            {
                                foreach (var item in Model.LoanMaster.LoanDetails)
                                {
                                    <tr data-articleid="@item.ArticleId">
                                        <td>@item.ArticleName</td>
                                        <td>@item.Unit</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
