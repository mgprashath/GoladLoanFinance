@model IEnumerable<GoldLoanFinance.Domain.Entities.LoanMaster>

@{
    ViewData["Title"] = "ListLoans";
}

<h4>Loans List</h4>

<p>
    <a asp-action="Index" asp-controller="Loan">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.Name)
            </th>        
            <th>
                @Html.DisplayNameFor(model => model.LoanAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTaken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.LoanId)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTaken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>          
            <td>
                <a asp-action="Edit" asp-controller="Loan" asp-route-id="@item.LoanId">Edit</a> |
                <a asp-action="Details" asp-controller="Loan" asp-route-id="@item.LoanId">Details</a> |
                <a asp-action="Delete" asp-controller="Loan" asp-route-id="@item.LoanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
