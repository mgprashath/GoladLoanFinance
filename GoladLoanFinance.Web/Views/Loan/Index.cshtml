@model GoldLoanFinance.Web.Models.LoanViewModel

@{
    ViewData["Title"] = "Create Loan";
}

<h4>Create Loan</h4>

<hr />
 
<form asp-action="CreateLoan" asp-controller="Loan" id="loanForm" onsubmit="return ValidateForm(event)">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="LoanMaster.LoanAmount" class="control-label"></label>
                <input asp-for="LoanMaster.LoanAmount" id="txtLoanAmount" class="form-control" oninput="ValidateLoanAmount(event)" />
                <span asp-validation-for="LoanMaster.LoanAmount" class="text-danger"></span>
                <span id="valLoanAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanMaster.DateTaken" class="control-label"></label>
                <input type="date" asp-for="LoanMaster.DateTaken" class="form-control" id="txtDateTaken" />
            </div>
            <div class="form-group">
                <label asp-for="LoanMaster.DueDate" class="control-label"></label>
                <input type="date" asp-for="LoanMaster.DueDate" class="form-control" id="txtDueDate" />
            </div>
            <div class="form-group">
                <label asp-for="LoanMaster.Customer.Name" class="control-label"></label>
                <select asp-for="LoanMaster.CustomerId" class="form-control" asp-items="@Model.CustomerList" id="lstCustomerName">
                    <option disabled selected value="-1">--Select Customer--</option>
                </select>
                <span asp-validation-for="LoanMaster.CustomerId" class="text-danger"></span>
                <span id="valCustomerName" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                    <input asp-for="LoanDetailsJson" type="hidden" id="LoanDetailsJson" name="LoanDetailsJson">
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create Loan" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="ListLoans" asp-controller="Loan">Cancel</a>
            </div>
        </div>
        <div class="col-md-4"> 
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">Article Name</label>
                        <input class="form-control" id="txtName"/>
                        <span id="valArticleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">Units</label>
                        <input class="form-control" type="number" min="1" value="1" id="txtUnit" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div id="formMessage" class="text-danger"></div>
                    <table class="table" id="itemsTable">
                        <thead>
                            <tr>
                                <th>Article Name</th>
                                <th>Unit</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="itemsTableBody"></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <br />
            <div class="form-group">
                <button type="button" class="btn btn-secondary" id="AddBtn">Add</button>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @* @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@

    <script>
        document.addEventListener('DOMContentLoaded', function(){
            const dt = document.getElementById("txtDateTaken");
            const dd = document.getElementById("txtDueDate");

            function getTodayDateString() {
            const now = new Date();
            const year = now.getFullYear();

            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');

            return `${year}-${month}-${day}`;
            }

            const todayDateString = getTodayDateString();

            dt.max = todayDateString;
            dd.min = todayDateString;

            function restrictDueDate() {
            dd.min = dt.value;

            if (dd.value && dd.value < dt.value) {
                dd.value = dt.value;
                }
            }
            restrictDueDate();

            dt.addEventListener('input', restrictDueDate);

            document.getElementById("AddBtn").addEventListener('click',Add);
        });

        document.querySelector("#itemsTable tbody").addEventListener("click", function(e){
            if(e.target.classList.contains("removeBtn")){
                e.target.closest("tr").remove();
            }
        });

        document.getElementById("txtName").addEventListener("focus", function(){
            document.getElementById("formMessage").textContent = "";
        });

        document.getElementById("loanForm").addEventListener('submit', function(e){
            const rows = document.querySelectorAll('#itemsTableBody tr');
            const data = [];
            const messageDiv = document.getElementById("formMessage");

            rows.forEach(r => {
                const article = r.cells[0].innerText.trim();
                const unit = parseInt(r.cells[1].innerText.trim(),10);
                data.push({ArticleName:article,Unit:unit});
            });

            if(data.length===0){
                e.preventDefault();
                messageDiv.innerText="Please add at least one item before submitting the form.";
                return;
            }

            document.getElementById("LoanDetailsJson").value = JSON.stringify(data);
        });

        function Add(){
            const name = document.getElementById("txtName").value.trim();
            const unit = document.getElementById("txtUnit").value.trim();

            const validateSpan = document.getElementById("valArticleName");
            validateSpan.textContent="";

            if(!name){
                validateSpan.textContent="The name field is required.";
                document.getElementById("txtName").focus();
                return;
            }

            if(/[^A-Za-z]/.test(name)){
                validateSpan.textContent="Article name cannot have numbers";
                document.getElementById("txtName").focus();
                return;
            }

            const tbody = document.querySelector("#itemsTable tbody");
            const tr = document.createElement("tr");
            tr.innerHTML = `<td>${name}</td><td>${unit}</td><td><a type="button" class="text-decoration-none removeBtn" >X</a></td>`;
            tbody.appendChild(tr);

            document.getElementById("txtName").value="";
            document.getElementById("txtUnit").value="1";
        }

        window.ValidateLoanAmount = function(e){
        const inputElement = e.target;
        const valLoanAmount = document.getElementById("valLoanAmount");
        let inputValue = inputElement.value;
        let errorDetected = false;

        if (/[^0-9.]/.test(inputValue)){
            const cleanValue = inputValue.replace(/[^0-9.]/g, '').slice(0, 15);
            if(cleanValue !== inputValue){
                inputElement.value = cleanValue;
                valLoanAmount.textContent = "Only numbers and a decimal point are allowed.";
                errorDetected = true;
            }
            inputValue = cleanValue;
        }

        const decimalCount = (inputValue.match(/\./g) || []).length;
        if (decimalCount > 1) {

            const fixedValue = inputValue.replace(/(\..*)\./g, '$1');
            inputElement.value = fixedValue;
            valLoanAmount.textContent = "Only one decimal point is allowed.";
            errorDetected = true;
        } else if (decimalCount === 1) {

            if (inputValue.startsWith('.')) {
                inputElement.value = '0' + inputValue;
                valLoanAmount.textContent = "";
            }
        }

        if (inputElement.value.trim().length === 0) {
            valLoanAmount.textContent = "Loan amount cannot be empty.";
            errorDetected = true;
        }

        if (errorDetected) {
            inputElement.focus();
            return;
        }

        valLoanAmount.textContent = "";
        }

        window.ValidateForm = function(e){
               const loanAmountElement = document.getElementById("txtLoanAmount");
               const valLoanAmount = document.getElementById("valLoanAmount");
               if(loanAmountElement.value <= 0){
                    valLoanAmount.textContent = "Loan amount must be greater than zero";
                    e.preventDefault();
                    return false;
               }

               const customerNameElement = document.getElementById("lstCustomerName");
               const valCustomerName = document.getElementById("valCustomerName");

               if(customerNameElement.value=== "-1"){
                   valCustomerName.textContent = "Please select a customer";
                   e.preventDefault();
                   return false;
               }
              
               return true;
        }

    </script>
}
