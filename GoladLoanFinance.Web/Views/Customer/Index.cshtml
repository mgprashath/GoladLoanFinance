@model IEnumerable<GoldLoanFinance.Domain.Entities.Customer>

@{
    ViewData["Title"] = "Customer";
}

<h4>List of Customers</h4>

<p>
    <a asp-action="Create" asp-controller="Customer">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
             </td>
            <td>
                <a asp-action="Edit" asp-controller="Customer" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-controller="Customer" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-controller="Customer" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
